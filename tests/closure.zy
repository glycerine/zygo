// left-fold produces output list that is reversed from the lst input
(defn foldl [lst fun acc]
    (cond
        (empty? lst) acc
        (foldl (cdr lst) fun (fun acc (car lst)))
		))

// right-fold preserves order of the lst in the acc output
(defn foldr [lst fun acc]
    (cond
        (empty? lst) acc
        (fun (car lst) (foldr (cdr lst) fun acc))
             ))

(defn filter [lst fun]
    (foldl lst
            (fn [x l]
                (cond
                    (fun x) (append l x)
                    l))
            [])
)

(defn gmap [fun lst]
	(foldl lst (fn [x l] (fun x)) []))

(defn even? [x]
    (cond
        (number? x)
            (cond
                (float? x) false
                (== (bitAnd x 1) 0))
            false
            ))

(defn newStore [items]
	(letseq [
		idx [-1]
		fun (fn []
				(cond
					(< (+ (aget idx 0) 1) (len items))
						(begin
							(aset idx 0 (+ (aget idx 0) 1))
							(aget items (aget idx 0))
						)
					()))
			] fun))


